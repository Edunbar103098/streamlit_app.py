import pandas as pd
import matplotlib.pyplot as plt
import descartes
import geopandas as gpd
from shapely.geometry import Point, Polygon
pd.set_option('display.max_rows',7000)

street_map = gpd.read_file(r'C:\Users\Dunbar_Edwa\PycharmProjects\Boston Project\City_of_Boston_Boundary.shp')
fig,ax = plt.subplots(figsize = (15,15))



df = pd.read_csv("boston.csv")
crs = {'init': 'epsg:4326'}
geometry = [Point(xy) for xy in zip(df['Long'], df['Lat'])]
geo_df = gpd.GeoDataFrame(df,
                         crs = crs,
                          geometry = geometry)
geo_df1 = geo_df.loc[geo_df["Lat"] > 0]


fig.ax = plt.subplots(figsize = (30,30))
street_map.plot(ax = ax, alpha = .4, color = 'grey')
geo_df1[geo_df1['OFFENSE_DESCRIPTION'] == 'INVESTIGATE PERSON'].plot(ax = ax, markersize = 20, color = 'red', marker ='.', label = 'No shooting')
geo_df1[geo_df1['DISTRICT'] == 'B2'].plot(ax = ax, markersize = 200, color = 'grey',alpha = .01,  label = 'No shooting', marker ='o')
geo_df1[geo_df1['DISTRICT'] == 'B3'].plot(ax = ax, markersize = 200, color = 'grey',alpha = .01,  label = 'No shooting', marker ='o')
geo_df1[geo_df1['DISTRICT'] == 'C11'].plot(ax = ax, markersize = 200, color = 'grey',alpha = .01,  label = 'No shooting', marker ='o')
geo_df1[geo_df1['DISTRICT'] == 'D4'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o' )
geo_df1[geo_df1['DISTRICT'] == 'A1'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'C6'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'D14'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'E13'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'E18'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'A7'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'E5'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
geo_df1[geo_df1['DISTRICT'] == 'A15'].plot(ax = ax, markersize = 200, color = 'grey', label = 'No shooting',alpha = .01, marker ='o'  )
